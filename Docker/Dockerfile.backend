FROM node:20-alpine

WORKDIR /app

COPY . .

RUN npm install -g pnpm@10.5.2

RUN pnpm install

RUN pnpm run generate:db

RUN pnpm --filter @repo/common run build && pnpm --filter @repo/database run build && pnpm --filter @repo/http-backend run build

ARG DATABASE_URL
ARG WS_PORT
ARG JWT_SECRET
ENV DATABASE_URL=${DATABASE_URL}
ENV HTTP_PORT=3001
ENV JWT_SECRET=${JWT_SECRET}

EXPOSE 3001

CMD [ "pnpm", "run", "start:backend" ]
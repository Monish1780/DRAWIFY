{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
    },
    "include": [
      "src/**/*",
    ]
}
{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
    "composite": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
        "@repo/common/*": ["../../packages/common/src/*"],
        "@repo/database/*": ["../../packages/database/src/*"]
    },
    "lib": ["ES2015"]
  },
  "include": [
    "src/**/*",
  ],
  "references": [
    {
      "path": "../../packages/common"
    },
    {
      "path": "../../packages/database"
    }
  ]
}
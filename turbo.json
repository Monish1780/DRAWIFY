{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "apps/frontend/.next/**",
        "!apps/frontend/.next/cache/**",
        "packages/common/dist/**",
        "packages/database/dist/**",
        "apps/http-backend/dist/**",
        "apps/ws-backend/dist/**"
      ]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },

    "check-types": {
      "dependsOn": ["^check-types"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
